---
import Burger from "./Burger.astro";
import Navigation from "./Navigation.astro";
---

<header>
  <nav>
    <h1><a href="/" class="home-anchor">Sukairaida</a></h1>
    <Burger />
    <Navigation />
  </nav>
</header>

<style>
  nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    z-index: 1000;
    padding: 0.5rem 0 0.5rem 0;
  }
  .home-anchor {
    font-size: 2rem;
    color: white;
    text-transform: uppercase;
  }

  a {
    color: white;
  }
</style>
