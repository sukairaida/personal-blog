---
import Burger from "./Burger.astro";
import Navigation from "./Navigation.astro";
---

<header>
  <nav>
    <h1><a href="/" class="home-anchor">Sukairaida</a></h1>
    <Burger />
    <Navigation />
  </nav>
</header>

<style>
  nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    z-index: 1000;
    padding: 0.5rem 0 0.5rem 0;
  }

  h1 {
    background: linear-gradient(
      135deg,
      rgba(250, 220, 0, 1) 5%,
      rgba(250, 85, 225, 1) 50%,
      rgba(0, 255, 250, 1) 95%
    );
    filter: drop-shadow(0px 0px 4px #fff6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .home-anchor {
    font-size: 2rem;
    color: white;
    text-transform: uppercase;
  }

  a {
    color: white;
  }
</style>
